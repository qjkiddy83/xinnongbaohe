{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "brickjs": false,
        "$": false,
        "jQuery": false,
        "Zepto": false,
        "Swiper":false
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "rules": {
        "curly": 0,
        "comma-dangle": [2, "never"], //never always-multiline
        "comma-spacing": 0,
        "eqeqeq": [2, "allow-null"],
        "key-spacing": 0,
        // "comma-dangle": [ 2, "always-multiline" ],
        "no-underscore-dangle": 0,
        "no-unused-expressions": 0,
        "no-shadow": 0,
        "no-shadow-restricted-names": 0,
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
        "no-extend-native": 0,
        "no-var": 2,
        "no-console": 0,
        "new-cap": 0,
        "quotes": 0,
        "semi-spacing": 0,
        "space-unary-ops": 0,
        "space-infix-ops": 0,
        "consistent-return": 0,
        "strict": 0
    },
    "parser": "babel-eslint",
    "plugins": [

    ],
    "extends": ["eslint:recommended"],
    "settings": {}
}
